<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

		<TableLayout
		    android:id="@+id/widget46"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

		    <Button
		        android:id="@+id/btAdicionar"
		        android:layout_width="wrap_content"
		        android:layout_height="68dp"
		        android:text="@string/adicionar"
		        android:textSize="24dp" />

		    <Button
		        android:id="@+id/btConsultar"
		        android:layout_width="wrap_content"
		        android:layout_height="68dp"
		        android:text="@string/consultar"
		        android:textSize="24dp" />

		    <Button
		        android:id="@+id/btGraficos"
		        android:layout_width="wrap_content"
		        android:layout_height="68dp"
		        android:text="@string/graficos"
		        android:textSize="24dp" />

		    <Button
		        android:id="@+id/btRelatorios"
		        android:layout_width="wrap_content"
		        android:layout_height="68dp"
		        android:text="@string/relatorios"
		        android:textSize="24dp" />

		    <Button
		        android:id="@+id/btConfiguracoes"
		        android:layout_width="wrap_content"
		        android:layout_height="68dp"
		        android:text="@string/configuracoes"
		        android:textSize="24dp" />

		    <Button
		        android:id="@+id/btTesteWS"
		        android:layout_width="wrap_content"
		        android:layout_height="68dp"
		        android:text="Teste WS"
		        android:textSize="24dp" />

		    <RelativeLayout
		        android:id="@+id/relativeLayout1"
		        android:layout_width="wrap_content"
		        android:layout_height="68dp" >
                
                <TextView
                    android:id="@+id/tvPeriodoCo"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/hoje"
                    android:textColor="@color/branco"
                    android:textSize="17dip" />

                <TextView
                    android:id="@+id/TextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="@string/ontem"
                    android:textColor="@color/branco"
                    android:textSize="17dip" />
                
                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:text="@string/semana"
                    android:textColor="@color/branco"
                    android:textSize="17dip" />
		    </RelativeLayout>
		</TableLayout>

</ScrollView>